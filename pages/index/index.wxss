}
 
.shopBox {
  /*clear: both;*//*margin-top: 15px;*/
  width: 46%;
  /* height: 276px; *//*border-right: solid 2px #e5e5e5;
    border-top: solid 2px #e5e5e5;*/
  overflow: auto;
  float: left;
  background-color: #fff;
  margin: 0rpx 10rpx 20rpx 20rpx;
  /*margin-bottom: 15px;*/
}
 
.shopBox:nth-child(even) {
  border-right: none;
  width: 46%;
  margin: 0rpx 10rpx 20rpx 10rpx;
}
 
.shopBox:nth-child(1) {
  margin-top: 20rpx;
}
 
.shopBox:nth-child(2) {
  margin-top: 20rpx;
}
 
.shopImg {
  width: 100%;
  height: 230rpx;
  margin: 0 auto;
}
 
