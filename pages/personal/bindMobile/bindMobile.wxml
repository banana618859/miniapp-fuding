<!--pages/personal/bindMobile/bindMobile.wxml-->
<van-row class="custom-class" gutter="2">
    <van-col span="24">
        <form bindsubmit='sureBind'>
            <view class="weui-cells weui-cells_after-title">
				<view class="weui-cell weui-cell_input weui-cell_vcode">
					<view class="weui-cell__hd">
						<view class="weui-label">手机号</view>
					</view>
					<view class="weui-cell__bd">
						<input style="height: 50px; line-height: 50px;" class="weui-input" name="mobile" placeholder="请输入手机号" />
					</view>
				</view>
				<view class="weui-cell weui-cell_input">
					<view class="weui-cell__hd">
						<view class="weui-label">密码</view>
					</view>
					<view class="weui-cell__bd">
						<input style="height: 50px; line-height: 50px;" type="password" class="weui-input" name="password" placeholder="请输入密码"/>
					</view>
				</view>
			</view>
            <button size="large" type="primary" form-type='submit'>确定</button>
        </form>
    </van-col>
</van-row>
